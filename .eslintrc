extends:
  - eslint-config-airbnb
  - prettier
  - prettier/react

plugins:
    - prettier

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  indent: 2
  arrow-body-style: 0
  consistent-return: 0
  func-style: 0
  func-names: 0
  comma-dangle: 0
  class-methods-use-this: 0
  no-console: 0
  no-param-reassign: 0
  no-use-before-define: 0
  linebreak-style: 0
  object-shorthand: 0
  no-underscore-dangle: 0
  no-return-assign: 0
  import/no-extraneous-dependencies: 0
  import/no-unresolved: 0
  import/extensions: 0
  "react/sort-comp": [2, {order: ['static-methods', 'lifecycle', 'render', 'everything-else']}]
  react/jsx-filename-extension: 0
  react/require-default-props: 0
  react/prefer-stateless-function: 0
  react/no-children-prop: 0
  react/forbid-prop-types: 0
  prettier/prettier: ["error", {"trailingComma": "es6", "singleQuote": true, "printWidth": 120}]
